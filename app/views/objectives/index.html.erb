<p id="notice"><%= notice %></p>

<h1>Objectives</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Deleted at</th>
      <th>Started on</th>
      <th>Ended on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <td><%= objective.name %></td>
        <td><%= objective.description %></td>
        <td><%= objective.created_at %></td>
        <td><%= objective.updated_at %></td>
        <td><%= objective.deleted_at %></td>
        <td><%= objective.started_on %></td>
        <td><%= objective.ended_on %></td>
        <td><%= link_to 'Show', objective %></td>
        <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

